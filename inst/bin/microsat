#!/usr/bin/env Rscript

# microsat command-line script.
#
# This will load microsat from either an available library, or (if executed
# from within the package source directory) directly from the package source
# via devtools.
#
# In Linux this should be executable directly.  To use in Windows see
# microsat.cmd.

# If called from package source, load from that
args <- commandArgs()
f <- gsub("^--file=", "", args[grep("^--file=", args)])
f <- normalizePath(f)
path <- dirname(dirname(f))
if (basename(path) == "inst") {
  suppressWarnings(devtools::load_all(dirname(path), quiet = TRUE))
}

results <- microsat::main()
